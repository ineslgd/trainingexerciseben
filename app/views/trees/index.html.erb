
<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>Welcome to the tree page</h1>
    </div>
  </div>

  <ul class="trees">
    <% @trees.each do |tree| %>
      <li>
        <h4><%= tree.name.capitalize %></h4>
        <%= link_to tree_path(tree) do %>
          <i class="fa-solid fa-info"></i>
        <% end %>
        <%= link_to edit_tree_path(tree) do %>
          <i class="fa-solid fa-pen ms-3 text-warning"></i>
        <% end %>
        <%= link_to tree_path(tree),
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
            <i class="fa-solid fa-trash ms-3 text-danger"></i>
        <% end %>
      </li>
    <% end %>
  </ul>

  <hr>
  <%= link_to new_tree_path do %>
    <i class="fa-solid fa-plus"></i> Add a new tree
  <% end %>
</div>
